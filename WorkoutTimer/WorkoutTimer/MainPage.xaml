<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WorkoutTimer"
             x:Class="WorkoutTimer.MainPage"
             Title="Workout Timer"
             BackgroundColor="BlueViolet">

    <StackLayout>
        <!-- Place new controls here -->
        
        <Label x:Name="TestLabel"
           Text="Welcome to the Workout-Timer App. Work in progress!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand"
           TextColor="White"/>
    </StackLayout>

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="settings" 
                     Order="Secondary" 
                     Text="Settings" 
                     Clicked="Settings_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>

</ContentPage>
