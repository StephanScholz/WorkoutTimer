<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WorkoutTimer"
             x:Class="WorkoutTimer.MainPage"
             Title="Workout Timer"
             BackgroundColor="BlueViolet">

    <StackLayout>
        <!-- Place new controls here -->

        <Label x:Name="setTime"
               Text="00:00" 
               FontSize="100"
               HorizontalOptions="Center"
               Margin="0, 50, 0, 0"
               TextColor="White"/>

        <Label Text="Pause-Time:"
               HorizontalOptions="Center"
               FontSize="30"
               TextColor="White"/>

        <Label x:Name="pauseTime"
               Text="00:00"
               FontSize="30"
               HorizontalOptions="Center"
               TextColor="White"/>

        <Button x:Name="setTimeButton"
                Clicked="SetTimeButton_Clicked"
                Text="Set Time"
                Margin="40, 0"
                HorizontalOptions="Fill"/>

        <Button x:Name="startButton"
                Clicked="StartButton_Clicked"
                Text="Start Timer"
                Margin="40, 0"
                HorizontalOptions="Fill"/>

        <Button x:Name="stopButton"
                Clicked="StopButton_Clicked"
                Text="Stop Timer"
                Margin="40, 0"
                HorizontalOptions="Fill"/>

    </StackLayout>

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="settings" 
                     Order="Secondary" 
                     Text="Settings" 
                     Clicked="Settings_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>

</ContentPage>
